{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyMolt",
  "version": "1.0.0",
  "identifier": "org.mymolt.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "MyMolt — Sovereign Runtime",
        "label": "main",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' http://localhost:* ws://localhost:*; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com"
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "MyMolt — Sovereign Runtime"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Your identity, your agent, your shield.",
    "longDescription": "MyMolt is a sovereign AI runtime that gives families a private, self-hosted AI assistant with identity management, encrypted storage, and role-based access control.",
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "iOS": {
      "developmentTeam": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "",
      "endpoints": [
        "https://releases.mymolt.org/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}