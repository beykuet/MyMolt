{
    "manifest_version": 3,
    "name": "MyMolt â€” Sovereign Browser Companion",
    "version": "1.0.0",
    "description": "Your identity, your agent, your shield. Browse with MyMolt by your side.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "storage",
        "declarativeNetRequest",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/inject.js"
            ],
            "css": [
                "content/inject.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/icon-16.png",
            "48": "assets/icon-48.png",
            "128": "assets/icon-128.png"
        }
    },
    "icons": {
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png",
        "128": "assets/icon-128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "dns_shield",
                "enabled": true,
                "path": "dns/rules.json"
            }
        ]
    }
}